= simple_form_for [category, product, review] do |f|
  - if review.errors.any?
    #error_explanation
      %h4= "#{pluralize(review.errors.count, "error")} prohibited this review from being saved:"
      %ul
        - review.errors.full_messages.each do |msg|
          %li= msg
          
  .form-group
    = f.text_area :content, class: 'form-control', placeholder: "Your review..."
  .form-group
    = f.input :rating, collection: 1..5, class: 'form-control', label: "Choose your rating"

  = f.submit 'Add review', class: 'btn btn-lg btn-primary'
