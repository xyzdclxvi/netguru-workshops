%p#notice= notice
%p#error= flash[:error]

%p
  %b Title:
  = product.title
%p
  %b Description:
  = product.description
%p
  %b Price:
  = product.price

%p
  %b Category
  = product.category.name
  
%p
  \ Added by:
  = link_to product.user.firstname + " " + product.user.lastname, product.user

%h3 Reviews
- if user_signed_in?
  = render 'reviews/form'
- else
  %p You have to log in to write a review.

= render reviews

- if user_signed_in? && current_user == product.user
  = link_to 'Edit', edit_category_product_path(category.id, product.id)
  \|
= link_to 'Back', category_products_path, class: 'btn btn-primary'
