= form_for category do |f|
  - if category.errors.any?
    #error_explanation
      %h2= "#{pluralize(category.errors.count, "error")} prohibited this category from being saved:"
      %ul
        - category.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    =# f.label :name, label: false
    = f.text_field :name, class: 'form-control', placeholder: "Category name", label: false

  = f.submit 'Add category', class: 'btn btn-lg btn-primary'
