- flash.each do |name, msg|
  = content_tag :p, msg, class: "alert alert-danger alert-show", id: "flash_#{name}"


.signin
  %h2 Change your password
  = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
    = f.error_notification
    = f.input :reset_password_token, as: :hidden
    = f.full_error :reset_password_token
    .form-inputs
      = f.input :password, required: true, autofocus: true, placeholder: "New password", label: false
      = f.input :password_confirmation, required: true, placeholder: "Confirm your new password", label: false
    .form-actions
      = f.button :submit, "Change my password", class: "btn btn-lg btn-primary btn-block"
  %br
  = render "devise/shared/links"
